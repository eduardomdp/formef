<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/formef</property>
		<property name="connection.username">moises.pereira</property>
		<property name="connection.password">edu221302</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<property name="hibernate.default_schema">formef</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">update</property> <!-- depois mudar para validate -->

		<mapping class="br.com.planef.domain.Produto" />
		<mapping class="br.com.planef.domain.Combo2" />
		<mapping class="br.com.planef.domain.Plataforma" />
		<mapping class="br.com.planef.domain.Plataforma_vinculada" />
		<mapping class="br.com.planef.domain.Principal" />
		<mapping class="br.com.planef.domain.Relatorio" />

	</session-factory>

</hibernate-configuration>